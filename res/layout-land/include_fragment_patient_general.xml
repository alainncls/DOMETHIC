<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    	<!-- Layout Patient address -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
   		android:background="@drawable/panel_very_light" style="@style/CoolPanel">    	    
	    	<include android:id="@+id/patient_address_layout" layout="@layout/include_fragment_patient_address"/>
	</LinearLayout>
	
	<!-- Layout Info patient -->
    <LinearLayout 
        android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
       	android:gravity="center_horizontal"
      	android:layout_weight="1"
        android:orientation="vertical"
   		android:background="@drawable/panel_very_light" style="@style/CoolPanel"> 
		<include android:id="@+id/patient_admission_layout" layout="@layout/include_fragment_patient_admission"/>
	</LinearLayout>
</LinearLayout>
